{
    "name": "functions",
    "description": "Cloud Functions for Firebase",
    "scripts": {
        "preserve": "doppler setup -p pbbbl -c dev",
        "preshell": "doppler setup -p pbbbl -c dev",
        "serve": "CLOUD_RUNTIME_CONFIG=\"$(doppler secrets download -p pbbbl -c dev --no-file | jq '{secrets: .}')\" firebase emulators:start --import=\"./.emulator-data\" --export-on-exit=\"./.emulator-data\"",
        "serve:fns": "CLOUD_RUNTIME_CONFIG=\"$(doppler secrets download -p pbbbl -c dev --no-file | jq '{secrets: .}')\" firebase emulators:start --only functions --import=\"./.emulator-data\" --export-on-exit=\"./.emulator-data\"",
        "shell": "CLOUD_RUNTIME_CONFIG=\"$(doppler secrets download --no-file | jq '{secrets: .}')\" firebase functions:shell",
        "secrets-sync": "firebase functions:config:unset secrets && firebase functions:config:set secrets=\"$(doppler secrets download --no-file)\"",
        "predeploy": "doppler setup -p pbbbl -c prd",
        "deploy": "npm run secrets-sync && firebase deploy",
        "deploy:fns": "npm run secrets-sync && firebase deploy --only functions",
        "logs": "firebase functions:log",
        "kill:all": "npx kill-port 8030 8031 8032 8033 8034 8035 8036 8037",
        "lint": "eslint --fix --quiet",
        "format": "prettier --write --loglevel error .",
        "predev": "doppler setup -p pbbbl -c dev",
        "prestg": "doppler setup -p pbbbl -c stg",
        "preprd": "doppler setup -p pbbbl -c prd",
        "dev:secrets": "cross-env NODE_ENV=development DOPPLER_TOKEN=$DOPPLER_TOKEN_PBBBL_DEV node ./.configure/secrets.generate.js",
        "stg:secrets": "cross-env NODE_ENV=staging DOPPLER_TOKEN=$DOPPLER_TOKEN_PBBBL_STG node ./.configure/secrets.generate.js",
        "prd:secrets": "cross-env NODE_ENV=production DOPPLER_TOKEN=$DOPPLER_TOKEN_PBBBL_PRD node ./.configure/secrets.generate.js"
    },
    "engines": {
        "node": "16"
    },
    "main": "index.js",
    "dependencies": {
        "@pbbbl/aes": "github:pbbbl/aes",
        "@pbbbl/clean": "github:pbbbl/clean",
        "aes-256-gcm": "^1.0.3",
        "axios": "^0.26.1",
        "change-case-all": "^1.0.14",
        "copy-anything": "^2.0.3",
        "cors": "^2.8.5",
        "debounce": "^1.2.1",
        "dotenv": "^16.0.0",
        "express": "^4.17.3",
        "firebase-admin": "^10.0.2",
        "firebase-functions": "^3.18.0",
        "flat": "^5.0.2",
        "http-errors": "^2.0.0",
        "is": "^3.3.0",
        "jsonfile": "^6.1.0",
        "luxon": "^2.3.1",
        "merge": "^2.1.1",
        "rfdc": "^1.3.0",
        "serialize-javascript": "^6.0.0",
        "stripe": "^8.148.0",
        "throttle-debounce": "^3.0.1",
        "throttled-queue": "^1.0.7",
        "traverse": "^0.6.6",
        "yup": "^0.32.11"
    },
    "devDependencies": {
        "@faker-js/faker": "^6.0.0-alpha.5",
        "@google-cloud/functions-framework": "^2.0.0",
        "cross-env": "^7.0.3",
        "firebase-functions-test": "^0.2.0",
        "kill-port": "^1.6.1"
    },
    "private": true
}
